<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guidance_card_view"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    card_view:cardBackgroundColor="#ff07e5f9"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/guidance_card_icon"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:src="@drawable/lump_sum_withdrawal_card"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/guidance_card_title_text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" 
            android:gravity="center"
            android:text="Lorem ipsom dolor sit amet"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/guidance_card_body_text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" 
            android:gravity="center"
            android:text="Vivamus fringilla, ipsum quis tincidunt blandit, velit felis venenatis nisl."
            android:textSize="14sp"
            android:paddingTop="4dp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <Button
                android:id="@+id/guidance_card_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:text="Porttitor"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
